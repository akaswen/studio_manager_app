<h2 class="text-center">Edit <%= resource_name.to_s.humanize %></h2>

<div class="row">
  <div class="col-1"></div>
  <div class="col-10 border mb-3">
    <h4 class="text-center">Basic Info</h4>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, novalidate: true, id: "user_form" }) do |f| %>

  <%= render 'form', f: f %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="row">
    <div class="col-1 col-md"></div>
    <ul class="text-secondary col">
      <li><i>(leave blank if you don't want to change it)</i></li>
      <li><i>(we need your current password to confirm your changes)</i></li>
    </ul>
    <div class="col-1 col-md"></div>
  </div>
  <div class="field row my-5">
    <div class='col-3'>
      <%= f.label :password %> <br />
    </div>
    <div class="col-9">
      <%= f.password_field :password, autocomplete: "new-password", class: "col-9" %>
      <span></span>
    </div>
  </div>

  <div class="field row my-5">
    <%= f.label :password_confirmation, class: "col-3 small" %>
    <div class="col-9">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-9" %>
      <span></span>
    </div>
  </div>

  <div class="field row my-5">
    <div class="col-3">
      <%= f.label :current_password %><br /> 
    </div>
    <div class="col-9">
      <%= f.password_field :current_password, autocomplete: "current-password", required: true, class: "col-9" %>
      <span></span>
    </div>
  </div>

  <div class="actions text-center">
    <%= f.submit "Update", class: "btn btn-outline-success" %>
  </div>
<% end %>

<div class="text-center mt-5 border-top pt-5">
  <h3>Unhappy?</h3>

  <p><%= button_to "Deactivate Account", user_path(@user), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-outline-danger" %></p>
</div>

  </div>
  <div class="col-1"></div>
</div>

