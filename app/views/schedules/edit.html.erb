<div id="edit-schedule">
  <h1 class="text-center">Weekly Schedule</h1>

  <div class="row mb-5" id="schedule-calendar">
    <div class="col">
      <ul class="list-group">
        <li class="list-group-item list-group-item-success">Available</li>
        <li class="list-group-item list-group-item-danger">Unavailable</li>
      </ul>
    </div>
