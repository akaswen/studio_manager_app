      <h3 class="text-center">Sunday</h3>
      <ul class="list-group">
        <div class="day-buttons mb-3">
          <span class="btn btn-outline-danger">block day</span>
          <span class="btn btn-outline-success">free day</span>
        </div>
        <% @schedule.time_slots.sunday_slots.each do |ts| %>
          <button id="<%= ts.id %>" class="list-group-item list-group-item-action btn
          <% if ts.available %>
            list-group-item-success
          <% else %>
            list-group-item-danger
          <% end %>
          "><%= ts.time %></button>
        <% end %>
      </ul>
    </div>

