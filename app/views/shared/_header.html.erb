<div id="header" class="row bg-dark pb-3">
  <div class='col-1'>
    <div id="icon" class="bg-light text-dark"></div>
  </div>
  <div class="col-10 text-center">
    <h1 class="mt-4"><%= link_to 'Heights Studios', root_path, class: "text-white" %></h1>
  </div>
  <div class='col-1'>
    <% if user_signed_in? %>
      <%= link_to 'Dashboard', dashboard_path %>
    <% end %>
  </div>
</div>

<div id="menu">
  <ul class="nav">
    <li class="nav-item m-3"><%= link_to 'Home', root_path, class: "nav-link btn btn-outline-primary" %></li>
    <li class="nav-item m-3"><%= link_to 'About', about_path, class: "nav-link btn btn-outline-primary" %></li>
    <% if user_signed_in? %>
      <li class="nav-item m-3"><%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: "nav-link btn btn-outline-primary" %></li>
    <% else %>
      <li class="nav-item m-3"><%= link_to 'Sign up', new_user_registration_path, class: "nav-link btn btn-outline-primary" %></li>
      <li class="nav-item m-3"><%= link_to 'Sign in', new_user_session_path, class: "nav-link btn btn-outline-primary" %></li>
    <% end %>
  </ul>
</div>

