<ul class="list-group">
  <% if edit %>
    <div class="day-buttons mb-3">
      <span class="btn btn-outline-danger">block day</span>
      <span class="btn btn-outline-success">unblock day</span>
    </div>
  <% end %>
  <% time_slots.each do |ts| %>
    <button id="<%= ts.id %>" data-time="<%= ts.time %>" data-day="<%= Date::DAYNAMES[ts.day] %>"  class="list-group-item list-group-item-action btn
    <% if ts.available %>
      list-group-item-success
    <% else %>
      list-group-item-danger
    <% end %>
    "><%= ts.time %></button>
  <% end %>
</ul>
