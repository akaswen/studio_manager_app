<div class="card text-center">
  <h4><%= link_to lesson.student.full_name, lesson.student %></h4>
  <h5><%= link_to "#{lesson.start_time.strftime("%A, %B %e, %I:%M %p")} - #{lesson.end_time.strftime("%I:%M %p")}", lesson %></h5>
  <p>at</p>
  <h6>
    <% if lesson.location == "teacher" %>
      The Teacher's Studio</br>
      <%= lesson.teacher.addresses.first.street_address %></br>
      <%= lesson.teacher.addresses.first.city %>, <%= lesson.teacher.addresses.first.state %> <%= lesson.teacher.addresses.first.zip_code %>
    <% else %>
      The Student's House</br>
      <%= lesson.student.addresses.first.street_address %></br>
      <%= lesson.student.addresses.first.city %>, <%= lesson.student.addresses.first.state %> <%= lesson.student.addresses.first.zip_code %>
    <% end %>
  </h6>
</div>

