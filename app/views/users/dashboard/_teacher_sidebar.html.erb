<button id="new_student_toggle" class="btn" data-toggle="collapse" data-target="#new_students"><h6>New Student Requests <em>(<%= @new_students.length %>)</em> <i class="fas fa-sort-up text-primary"></i></h6></button>
<div class="row collapse" id="new_students">
  <% if @new_students %>
    <ul class="list-group ml-5">
      <% @new_students.each do |s| %>
        <li class="list-group-item" id="<%= s.id %>">
          <div class="row align-items-center">
            <div class="col-7">
              <%= s.full_name %>
            </div>
            <div class="col-5">
              <button class="btn btn-link" data-decision="add"><span class="badge badge-pill badge-success" data-decision="add">&#10004;</span>Studio</button>
              <button class="btn btn-link" data-decision="wait-list"><span data-decision="wait-list" class="badge badge-pill badge-danger">&#10006;</span>Wait List</button>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
