<div class="row">
  <div class="col-md-3 col-12 text-center mb-3" id="student-sidebar">
    <div class="row">
      <div class="bg-light rate mb-md-4 p-4 col col-md-12 m-3">
        <h5>Rate per Hour</h5>
        <h2 class="text-success" id="rate"><%= @user.rate %></h2>
      </div>
      <div class="bg-light rate text-success p-4 col col-md-12 m-3">
        <h5>Credit</h5>
        <h2 class="text-success" id="rate"><%= dollar_prettified(@user.credit) %></h2>
      </div>
    </div>
  </div>
  <div class="col-12 col-md-6 ml-md-3" id="student-lessons">
    <h4 class="text-center border-bottom pb-3">Next Lesson</h4>
    <% if @next_lesson %>
      <%= render 'shared/lesson_card', lesson: @next_lesson %>
    <% else %>
      <h5 class="text-center text-secondary">No upcoming lessons</h5>
    <% end %>
    <h4 class="text-center border-bottom pb-3">Lessons over the next few weeks</h4>
      <% unless @lessons.empty? %>
        <% @lessons.each do |l| %>
          <%= render 'shared/lesson_card', lesson: l %>
        <% end %>
      <% else %>
        <h5 class="text-center text-secondary">No other upcoming lessons</h5>
      <% end %>
  </div>
</div>
